{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "rootDir": "src",
      "outDir": "lib",
      "declaration": true,
      "emitDeclarationOnly": true,
      "composite": true,
      "strict": true,
      "noEmit": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "traceResolution": true,
      "paths": {
        "@streem/*": ["../*"]
      }
    //   "baseUrl": "../", // This must be specified if "paths" is.
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "references": [
        { "path" : "../api/"}
    ]
  }
  