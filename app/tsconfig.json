{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "strict": true,
    "composite": true,
    "noEmit": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "paths": {
    "@streem/*": ["../packages/*"]
  },
  "references": [
    { "path" : "../packages/sdk-core"}
  ]
}